{% extends 'admin-base.html.twig' %}
{% block stylesheet %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/admin/user/management.css') }}">
    <link rel="stylesheet" href="{{ asset('css/admin/home-panel.css') }}">
    <link rel="stylesheet" href="{{ asset('css/admin/category/category.css') }}">
{% endblock %}
{% block main %}
        <table>
        <tr>
            <th>Titre</th>
            <th>Supprimer</th>
        </tr>
        {% for category in categories %}
            <tr>
                <td>{{ category.name }}</td>
                <td>
                    <a href="{{ path('admin_category_delete', {category: category.id}) }}">
                        <i class="fas fa-trash-alt"></i>
                    </a>
                </td>
            </tr>
        {% endfor %}
{% endblock %}