<!doctype html>
<html lang="fr-FR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="icon" href="{{ asset('images/icon.png') }}" type="image/x-icon" />
    <link rel="shortcut icon" href="{{ asset('images/icon.png') }}" type="image/x-icon" />
    <title>{% block title %}Le Rameau - Église ACF{% endblock %}</title>

    <link href="https://fonts.googleapis.com/css?family=Kalam:300,400,700|Poppins:400,800,800i&display=swap"
          rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Source+Code+Pro:400,400i,900,900i&display=swap"
          rel="stylesheet">
    <link href="{{ asset('css/normalize.css') }}" rel="stylesheet">
    <link href="{{ asset('css/mobile-main.css') }}" rel="stylesheet">
    <link href="{{ asset('css/desktop-main.css') }}" rel="stylesheet">
    {% block stylesheet %}
    {% endblock %}
</head>
<body>
<header class="parent-flbg">
    <ul id="top-banner">
        <li>
            <h1 class="logo">
                <a href="{{ path('home') }}" id="brand"><img src="https://img.icons8.com/ios/50/000000/dove.png"/>
                    <div id="logo-box">
                        <span>Le Rameau</span>
                        <span class="church">église</span>
                    </div>
                </a>
            </h1>
        </li>
        <li id="burger-button">
            <div id="button">
                <div id="firstDiv"></div>
                <div id="secondDiv"></div>
                <div id="thirdDiv"></div>
            </div>
        </li>
    </ul>
    <nav class="overlay-menu" style="display: none">
        <ul>
            <li><a href="{{ path('about') }}">Notre église</a></li>
            <li><a href="{{ path('article_show') }}">Nos articles</a></li>
            <li><a href="{{ path("join-us") }}">Rejoignez-nous</a></li>
            {% if app.user is same as(null) %}
                <li>
                    <a href="{{ path('security_login') }}"><strong>Se connecter</strong></a>
                </li>
                <li>
                    <a href="{{ path('security_registration') }}"><strong>S'inscrire</strong></a>
                </li>
            {% else %}
                <li>
                    <a href="{{ path('user_profile') }}"><strong>Mon profil </strong>{{ app.user.username }}</a>
                </li>
                <li>
                    <a href="{{ path('security_logout') }}"><strong>Se deconnecter</strong></a>
                </li>
            {% endif %}
        </ul>
    </nav>
    {% for message in app.flashes('success') %}
        <div class="flashbag-success">{{ message }}</div>
    {% endfor %}
    {% for message in app.flashes('error') %}
        <div class="flashbag-success" style="background-color: #902b2b">{{ message }}</div>
    {% endfor %}
</header>

<main>

    {% block main %}

    {% endblock %}
</main>

<footer>
    {% block footer %}
        <nav>
            <ul>
                <li><a href="{{ path('join-us') }}">Nous trouver <img
                                src="https://img.icons8.com/ios-glyphs/30/000000/question-mark.png"/></a></li>
                <li><a href="https://icons8.com">Sources <img src="https://img.icons8.com/android/24/000000/idea.png"/></a></li>
                <li><a href="{{ path('signal') }}">Signaler un problème <img src="https://img.icons8.com/material/24/000000/bug.png"/></a>
                </li>
                <li><a href="{{ path('contact') }}">Contact <img src="https://img.icons8.com/android/24/000000/contact-card.png"/></a></li>
            </ul>
        </nav>
    {% endblock %}
</footer>
<script
        src="https://code.jquery.com/jquery-3.4.1.js"
        integrity="sha256-WpOohJOqMqqyKL9FccASB9O0KwACQJpFTUBLTYOVvVU="
        crossorigin="anonymous">
</script>
<script src="https://kit.fontawesome.com/e552a10175.js" crossorigin="anonymous"></script>
<script src="{{ asset('js/burger-menu.js') }}"></script>
<script src="{{ asset('js/login-submenu.js') }}"></script>
<script src="{{ asset('js/flashbag.js') }}"></script>
{% block javascripts %}
{% endblock %}
</body>
</html>